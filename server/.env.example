# UPass Server Configuration Example
# Copy this to .env and modify as needed

# Database
UPASS_DB_PATH=./upass.db

# Security
UPASS_SECRET_KEY=your-secret-key-here

# Rate Limiting
UPASS_RATE_LIMIT=true
UPASS_RATE_LIMIT_DEFAULT=10/minute

# Server
UPASS_HOST=0.0.0.0
UPASS_PORT=8000
UPASS_DEBUG=false

# CORS (comma-separated origins, or * for all)
UPASS_CORS_ORIGINS=*

# Logging
UPASS_LOG_LEVEL=INFO

# Limits
UPASS_MAX_VAULT_SIZE=100000
UPASS_MAX_USERNAME_LENGTH=32
UPASS_TIMESTAMP_TOLERANCE=300